{
  "name": "@i-xi-dev/bytes",
  "version": "2.0.0",
  "description": "A JavaScript byte array library for the browser, Deno and Node.js",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "node": "./node/index.mjs",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc --emitDeclarationOnly && webpack",
    "clean": "node -e \"fs.rmSync(`dist`, { recursive:true, force:true })\"",
    "lint": "eslint --ext ts --fix ./src/",
    "test": "jest && mocha test/node/ --recursive",
    "prepublish": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/i-xi-dev/bytes.es.git"
  },
  "keywords": [
    "base64",
    "base64url",
    "blob",
    "byte",
    "bytes",
    "dataurl",
    "integrity",
    "sha256",
    "sha384",
    "sha512",
    "utf-8",
    "browser",
    "deno",
    "nodejs"
  ],
  "author": "i-xi-dev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/i-xi-dev/bytes.es/issues"
  },
  "homepage": "https://github.com/i-xi-dev/bytes.es#readme",
  "files": [
    "dist",
    "node"
  ],
  "engines": {
    "node": ">=16.5.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@i-xi-dev/base64": "^1.1.4",
    "@i-xi-dev/fundamental": "^1.5.5",
    "@i-xi-dev/mimetype": "^1.0.2",
    "@i-xi-dev/percent": "^1.0.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "babel-jest": "^27.4.6",
    "eslint": "^8.7.0",
    "iconv-lite": "^0.6.3",
    "jest": "^27.4.7",
    "mocha": "^9.1.4",
    "node-abort-controller": "^3.0.1",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "typedoc": "^0.22.11",
    "typescript": "^4.5.5",
    "webpack": "^5.67.0",
    "webpack-cli": "^4.9.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
