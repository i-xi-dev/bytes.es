{
  "name": "@i-xi-dev/bytes",
  "version": "0.0.22",
  "description": "A JavaScript byte array library for the browser, Deno and Node.js",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "node": "./node.mjs",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "lint": "eslint --ext ts --fix ./src/",
    "test": "mocha test/node/ --recursive",
    "prepublish": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/i-xi-dev/bytes.es.git"
  },
  "keywords": [
    "base64",
    "base64url",
    "blob",
    "byte",
    "bytes",
    "dataurl",
    "integrity",
    "sha256",
    "sha384",
    "sha512",
    "shift_jis",
    "utf-8",
    "browser",
    "deno",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/i-xi-dev/bytes.es/issues"
  },
  "homepage": "https://github.com/i-xi-dev/bytes.es#readme",
  "files": [
    "dist",
    "node.mjs"
  ],
  "engines": {
    "node": ">=16.5.0"
  },
  "devDependencies": {
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "iconv-lite": "^0.6.3",
    "mocha": "^9.1.1",
    "typescript": "^4.4.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
